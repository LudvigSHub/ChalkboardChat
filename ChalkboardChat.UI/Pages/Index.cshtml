@page
@model ChalkboardChat.UI.Pages.IndexModel

<h2> Login </h2>

<form method="post">
	<div>
		<input type="text" placeholder="Username" asp-for="Username" />
	</div>

	<div>
		<input type="password" placeholder="Password" asp-for="Password" />
	</div>

	<button type="submit">Login</button>
	<a asp-page="/Member/Register">Don't have an account? Register here.</a>

</form>
